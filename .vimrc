set nocompatible
syntax enable
set showcmd
filetype plugin indent on
set mouse=a

set nowrap
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set smarttab
set backspace=indent,eol,start
autocmd FileType make setlocal noexpandtab

set hlsearch
set incsearch
set ignorecase
set smartcase
